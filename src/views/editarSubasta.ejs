<%- include('partials/head') %>
<link rel="stylesheet" href="/css/footer_header_component.css">
<link rel="stylesheet" href="/css/crearSubasta.css">

<%- include('partials/header') %>

<main data-id-subasta="<%= idSubasta %>">
    <section class="crear-subasta-container" aria-labelledby="titulo-editar-subasta">
        <h1 id="titulo-editar-subasta">Editar Subasta</h1>

        <form id="form-editar-subasta" class="formulario-subasta" aria-label="Formulario de edición de subasta">
            <!-- Datos del Producto -->
            <section class="seccion-formulario" aria-labelledby="titulo-producto">
                <h2 id="titulo-producto"><i class="fas fa-fish" aria-hidden="true"></i>Datos del Producto</h2>
                
                <div class="campo-formulario">
                    <label for="nombre-producto">Nombre del Producto</label>
                    <input type="text" id="nombre-producto" name="nombre-producto" required placeholder="Ej: Percebes de Galicia" aria-required="true">
                </div>

                <div class="campo-formulario">
                    <label for="tipo-producto">Tipo de Producto</label>
                    <select id="tipo-producto" name="tipo-producto" required aria-required="true">
                        <option value="">Seleccione un tipo</option>
                        <option value="Percebes">Percebes</option>
                        <option value="Mejillón">Mejillón</option>
                        <option value="Almeja">Almeja</option>
                        <option value="Vieira">Vieira</option>
                        <option value="Berberecho">Berberecho</option>
                        <option value="Navajas">Navajas</option>
                        <option value="Pulpo">Pulpo</option>
                        <option value="Zamburiñas">Zamburiñas</option>
                        <option value="Centollo">Centollo</option>
                        <option value="Bogavante">Bogavante</option>
                    </select>
                </div>

                <div class="campo-formulario">
                    <label for="cantidad">Cantidad (kg)</label>
                    <input type="number" id="cantidad" name="cantidad" min="1" step="1" required placeholder="Ej: 50" aria-required="true">
                </div>

                <div class="campo-formulario">
                    <label for="precio-inicial">Precio Inicial (€/kg)</label>
                    <input type="number" id="precio-inicial" name="precio-inicial" min="1" step="0.5" required placeholder="Ej: 25.50" aria-required="true">
                </div>
            </section>

            <!-- Datos de la Subasta -->
            <section class="seccion-formulario" aria-labelledby="titulo-subasta">
                <h2 id="titulo-subasta"><i class="fas fa-gavel" aria-hidden="true"></i> Datos de la Subasta</h2>

                <div class="campo-formulario">
                    <label for="fecha-inicio">Fecha y Hora de Inicio</label>
                    <input type="datetime-local" id="fecha-inicio" name="fecha-inicio" required aria-required="true">
                </div>

                <div class="campo-formulario">
                    <label for="fecha-fin">Fecha y Hora de Fin</label>
                    <input type="datetime-local" id="fecha-fin" name="fecha-fin" required aria-required="true">
                </div>

                <div class="campo-formulario">
                    <label for="estado">Estado Inicial</label>
                    <select id="estado" name="estado" required aria-required="true">
                        <option value="pendiente">Pendiente</option>
                        <option value="activa">Activa</option>
                    </select>
                </div>
            </section>

            <!-- Botones -->
            <section class="botones-formulario" aria-label="Acciones del formulario">
                <button type="submit" class="btn-crear" aria-label="Confirmar y actualizar subasta">
                    <i class="fas fa-save" aria-hidden="true"></i> Actualizar Subasta
                </button>
                <button type="button" class="btn-cancelar" onclick="window.location.href='/subastas'" aria-label="Cancelar y volver a subastas">
                    <i class="fas fa-times" aria-hidden="true"></i> Cancelar
                </button>
            </section>
        </form>
    </section>
</main>

<script src="/js/editarSubasta.js"></script>
<%- include('partials/footer') %>
